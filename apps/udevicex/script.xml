<?xml version="1.0"?>
<simulation name="poiseuille" logfile="log" mpi_ranks="1 1 1" debug_lvl="4" noplugins="false">

	<domain size="64 64 64" />
	
	<particle_vector type="regular" name="dpd" mass="1">
		<generate type="uniform" density="8" />
	</particle_vector>
	
	<particle_vector type="regular" name="frozen" mass="1">
		<generate type="restart" path="restart/" />
	</particle_vector>
	
	<!-- <wall type="sdf" name="wall" sdf_filename="../../walls/cylinder_r5_h32.sdf">
		<generate_frozen name="frozen" path="restart" mass="1.0" density="8" a="2.6666667" kbt="0.05" rc="1.0" power="0.5" />
		<apply_to pv="dpd" check="true" />
	</wall> -->
	<wall type="cylinder" name="wall" center="32 32" radius="10" axis="z">
		<generate_frozen name="frozen" path="restart" mass="1.0" density="8" a="2.6666667" kbt="0.05" rc="1.0" power="0.5" />
		<apply_to pv="dpd" check_every="10" />
	</wall>
	
	<interaction type="dpd" name="dpd_int" a="2.6666667" gamma="8" kbt="0.0444302" dt="0.0005" rc="1.0" power="0.5">
		<apply_to pv1="dpd" pv2="dpd"/>
		<apply_to pv1="dpd" pv2="frozen"/>
	</interaction>
	
	<integrator type="vv_periodic_poiseuille" name="pois" force="0.1" dt="0.0005">
		<apply_to pv="dpd" />
	</integrator>
	
 	<plugin type="dump_avg_flow" name="avg"
		pv_names="dpd"
		sample_every="10" dump_every="500"
		bin_size="0.5 0.5 0.5"
		path="xdmf/avg_rho_u" />
	
	<plugin type="stats" name="stats" every="100" />
	
	<run niters="5000" />

</simulation>

